<!DOCTYPE html>
<html>
  <head>
    <title>Todo List</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="footerFixed">
      <div class="container header">
          <span>Todo List</span>
      </div>
      <div class="container description">
            <span>やりたいことを管理しましょう</span>
      </div>

      <div class="container todolist">
        <div class="table">
          <div class="button">
            <div class="btn id">
              <form action="/id-sort" method="post">
                <input type="submit" value="id" class="id-btn sorts">
              </form>
            </div>
            <div class="btn task">
              <form action="/task-sort" method="post">
                <input type="submit" value="タスク" class="task-btn sorts">
              </form>
            </div>
            <div class="btn importance">
              <form action="/importance-sort" method="post">
                <input type="submit" value="重要度" class="importance-btn sorts">
              </form>
            </div>
          </div>
          <div class="table-list">
          <% items.forEach((item) => { %>
              <div class="id column">
                <span><%= item.id %></span>
              </div>
              <div class="task column">
                <span><%= item.task %></span>
              </div>
              <div class="importance column">
                <span><%= item.importance %></span>
              </div>
          <% })%>
          </div>
        </div>
      </div>
      
      <div class="container warning">
          <span><%= msg %></span> 
      </div>

      <div class="container form">
          <form action="/create" method="post">
            <div class="form-wrapper">
            <div class="input-form"> 
              <p>タスク</p>
              <div class="text-center">
                <input type="text"  name="Task">
              </div>
            </div>

            <div class="input-form">
              <p>重要度</p>
              <div class="text-center">
                  <input type="text" name="Importance">
              </div>
            </div>
            </div>
            <div class="submit-form">
              <input type="submit" value="追加">
            </div>
          </form>
      </div>

      <div class="container footer">
        <span>giranaga</span>
      </div>
    </div>
  </body>
</html>
